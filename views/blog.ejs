<div class="ftco-blocks-cover-1">
  <div class="site-section-cover overlay" style="background-image: url('images/hero_1.jpg')">
    <div class="container">
      <div class="row align-items-center justify-content-center text-center">
        <div class="col-md-7" data-aos="fade-up">
          <h1 class="mb-3 text-white">Our Travel Blog</h1>
          <p>Discover stories from around the worldâ€”adventures, local cuisines, breathtaking landscapes, and unforgettable memories shared by travelers like us.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="site-section">
  <div class="container">

    <div class="row">
      <!-- Munnar Blog Post -->
      <% posts.forEach(function(post) { %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="post-entry-1 h-100">
          <a href="/single/<%= post.id %>">
            <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="img-fluid">
          </a>
          <div class="post-entry-1-contents">
            <h2><a href="/single/<%= post.id %>"><%= post.title %></a></h2>
            <span class="meta d-inline-block mb-3">
              <%= post.date %> <span class="mx-2">by</span> <a href="#"> <%= post.author %> </a>
            </span>
            <p><%= post.summary %></p>

            <div class="d-flex justify-content-between mt-3">
              <a href="/edit/<%= post.id %>" class="btn btn-sm btn-outline-primary">Edit</a>
              <form action="/delete/<%= post.id %>" method="POST" onsubmit="return confirm('Are you sure that you want to delete the post?')">
                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
      <!-- Add more col-lg-4 blocks here for other blog entries -->
    </div>

    <div class="col-12 mt-5 text-center">
      <span class="p-3">1</span>
      <a href="#" class="p-3">2</a>
      <a href="#" class="p-3">3</a>
      <a href="#" class="p-3">4</a>
    </div>

  </div>

</div> <!-- END .site-section -->

<div class="site-section bg-light" id="create-form">
  <div class="container">
    <h3 class="mb-5">Create a New Blog Post</h3>
    <form action="/create" method="POST">
      <div class="form-group mb-3">
        <label for="title">Title *</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>

      <div class="form-group mb-3">
        <label for="author">Author *</label>
        <input type="text" class="form-control" id="author" name="author" required>
      </div>

      <div class="form-group mb-3">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" name="date">
      </div>

      <div class="form-group mb-3">
        <label for="thumbnail">Thumbnail URL *</label>
        <input type="text" class="form-control" id="thumbnail" name="thumbnail" required>
      </div>

      <div class="form-group mb-3">
        <label for="background_image">Background Image URL *</label>
        <input type="text" class="form-control" id="background_image" name="background_image" required>
      </div>

      <div class="form-group mb-3">
        <label for="summary">Short summary *</label>
        <textarea class="form-control" id="summary" name="summary" required></textarea>
      </div>

      <div class="form-group mb-3">
        <label for="content">Post Content *</label>
        <div>
          <textarea class="form-control" name="content" id="TinyMCE" rows="6"></textarea>
        </div>
      </div>

      <div class="form-group mb-3">
        <label for="category">Categories (comma-separated) *</label>
        <input type="text" class="form-control" id="category" name="category" required>
      </div>

      <div class="form-group mb-3">
        <label for="tags">Tags (space-separated) *</label>
        <input type="text" class="form-control" id="tags" name="tags" required>
      </div>

      <div class="form-group">
        <input type="submit" value="Create Post" class="btn btn-primary text-white">
      </div>
    </form>
  </div>
</div>